<p class="alert alert-info"><%= notice %></p>

<div class="container mt-5">
  <h1 class="mb-4">Listing All Students</h1>

  <div class="mb-3">
    <%= link_to 'Create New Student', new_student_path, class: "btn btn-primary" %>
  </div>

  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">BirthDate</th>
        <th scope="col">PhoneNo</th>
        <th scope="col">City</th>
        <th scope="col">State</th>
        <th scope="col">Country</th>
        <th scope="col" colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.email %></td>
          <td><%= student.birthdate %></td>
          <td><%= student.contact_no %></td>
          <td><%= student.city %></td>
          <td><%= student.state %></td>
           <td><%= student.country %></td>
          <td><%= link_to "View", student, class: "btn btn-info btn-sm" %></td>
          <td><%= link_to "Edit", edit_student_path(student), class: "btn btn-warning btn-sm" %></td>
          <td> <%= link_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %> </td>
        </tr>
      <% end %>
    </tbody>
  </ta>
</div>
