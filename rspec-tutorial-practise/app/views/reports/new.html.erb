<!-- app/views/reports/new.html.erb -->
<h1>New Report</h1>
<%= form_with model: @report do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit "Create Report" %>
  </div>
<% end %>
