  <% resource_name = :student %> 
  <% resource = Student.new %>
  <!-- <!-- <% devise_mapping = Devise.mappings[:student] %> -->


  <div class="container mt-5">
    <h2 class="text-center mb-4">Edit Student</h2>
  
    <%= form_for(@student, url: student_path(@student), method: :put, html: { class: "form-signup" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: @student %>
  
      <div class="card p-4 mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :first_name, class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control", required: true %>
            </div>
  
            <div class="col-md-6 mb-3">
              <%= f.label :last_name, class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control", required: true %>
            </div>
          </div>
  
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :birthdate, class: "form-label" %>
              <%= f.date_field :birthdate, class: "form-control", required: true %>
              <div class="invalid-feedback">
                Please enter your birthdate.
              </div>
            </div>
  
            <div class="col-md-6 mb-3">
              <%= f.label :contact_no, "Phone Number", class: "form-label" %>
              <%= f.number_field :contact_no, class: "form-control", required: true, maxlength: 10, inputmode: "numeric", title: "Please enter a 10-digit phone number using only digits", oninput: "this.value=this.value.slice(0,10);" %>
              <div class="invalid-feedback">
                Please enter a valid 10-digit phone number.
              </div>
            </div>
          </div>
  
          <div class="row">
            <div class="col-md-4 mb-3">
              <%= f.label :city, class: "form-label" %>
              <%= f.text_field :city, class: "form-control", required: true %>
              <div class="invalid-feedback">
                Please enter your city.
              </div>
            </div>
  
            <div class="col-md-4 mb-3">
              <%= f.label :state, class: "form-label" %>
              <%= f.text_field :state, class: "form-control", required: true %>
              <div class="invalid-feedback">
                Please enter your state.
              </div>
            </div>
  
            <div class="col-md-4 mb-3">
              <%= f.label :country, class: "form-label" %>
              <%= f.select :country, options_for_select(Student.country_code_list.map { |code| [IsoCountryCodes.find(code).name, code] }, @student.country), { include_blank: 'Select Country' }, { class: 'form-control' } %>
              <div class="invalid-feedback">
                Please select your country.
              </div>
            </div>
          </div>
        </div>
      </div>
  
      <div class="mt-3">
        <%= f.submit "Update", class: "btn btn-warning mr-2" %>
        <%= link_to 'Back To Student List', students_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  
    <div class="mt-4 mb-4">
      <h6>Cancel my account</h6>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-lg" %>
    </div>
  </div>
  