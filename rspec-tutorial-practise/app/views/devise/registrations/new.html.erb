<h2 class="text-center mb-4">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signup" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="card p-4 mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :first_name, class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control", required: true %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :last_name, class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control", required: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="col-md-4 mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", required: true %>
        </div>

        <div class="col-md-4 mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control", required: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :birthdate, class: "form-label" %>
          <%= f.date_field :birthdate, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please enter your birthdate.
          </div>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :contact_no, "Phone Number", class: "form-label" %>
          <%= f.number_field :contact_no, class: "form-control", required: true, maxlength: 10, inputmode: "numeric", title: "Please enter a 10-digit phone number using only digits", oninput: "this.value=this.value.slice(0,10);" %>
          <div class="invalid-feedback">
            Please enter a valid 10-digit phone number.
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 mb-3">
          <%= f.label :city, class: "form-label" %>
          <%= f.text_field :city, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please enter your city.
          </div>
        </div>

        <div class="col-md-4 mb-3">
          <%= f.label :state, class: "form-label" %>
          <%= f.text_field :state, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please enter your state.
          </div>
        </div>

        <div class="col-md-4 mb-3">
          <%= f.label :country, class: "form-label" %>
          <%= f.select :country, options_for_select(Student.country_code_list.map { |code| [IsoCountryCodes.find(code).name, code] }, @student.country), { include_blank: 'Select Country' }, { class: 'form-control' } %>
          <div class="invalid-feedback">
            Please select your country.
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center">
    <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
    <div class="d-flex justify-content-center gap-2 mt-3">
      <% if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-primary" %>
      <% end %>
    
      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-primary" %>
      <% end %>
    
    
    </div>
    
  </div>
<% end %>


  