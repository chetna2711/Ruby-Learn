<div class="container mt-5">
  <%= notice %>

  <h1 class="mb-4">Student Details</h1>

  <div class="card">
    <div class="card-body">
      <!-- First Name and Last Name side by side -->
      <div class="row mb-3">
        <div class="col-md-6">
          <p><strong>First Name: </strong><%= @student.first_name %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Last Name: </strong><%= @student.last_name %></p>
        </div>
      </div>

      <!-- Email in a single line -->
      <div class="row mb-1">
        <div class="col-md-4">
          <p><strong>Email: </strong><%= @student.email %></p>
        </div>
        <div class="col-md-4">
        <p><strong>Birthdate: </strong><%= @student.birthdate %></p>
      </div>
      <div class="col-md-4">
        <p><strong>ContactNo: </strong><%= @student.contact_no %></p>
      </div>
      </div>

      <!-- Birthdate and Phone No side by side -->
      <div class="row mb-3">

      </div>

      <!-- City, State, and Country side by side -->
      <div class="row mb-3">
        <div class="col-md-4">
          <p><strong>City: </strong><%= @student.city %></p>
        </div>
        <div class="col-md-4">
          <p><strong>State: </strong><%= @student.state %></p>
        </div>
        <div class="col-md-4">
          <p><strong>Country: </strong><%= @student.country %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-3">
  <%= link_to "Edit", edit_student_path(@student), class: "btn btn-warning mr-2" %>
  <%= link_to 'Back To Student List', students_path, class: "btn btn-secondary" %>
</div>

</div>
